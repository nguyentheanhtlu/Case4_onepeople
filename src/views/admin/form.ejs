            </div>
        </nav>
        <!-- Navbar End -->


        <!-- Form Start -->

        <div class="container-fluid pt-4 px-4">
            <div class="row">
                <form action="/admin/create/product" method="post" enctype="multipart/form-data">
                    <div class="col-sm-12 ">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Floating Label</h6>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" name="name" id=""
                                       placeholder="Product name ...">
                                <label for="">Product name</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="number" class="form-control" name="price" id=""
                                       placeholder="Price ...">
                                <label for="">Price</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" name="author" id=""
                                       placeholder="Author">
                                <label for="">Author</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" name="made_in" id=""
                                       placeholder="Made in ...">
                                <label for="">Made in</label>
                            </div>
                            <div class="form-floating mb-3">
                                <textarea type="text" class="form-control" name="description" id=""
                                          placeholder="Write something ..." style="height: 200px; width: 100%"></textarea>
                                <label for="">Description</label>
                            </div>
                            <div class="form-floating mb-3">
                                <select class="form-select" id="floatingSelect"
                                        name="category"
                                        aria-label="Floating label select example">
                                    <% categories.forEach((item, index)=>{ %>
                                        <option value="select" selected hidden>Select something ...</option>
                                        <option value="<%= item._id %>">
                                            <%= item.name %>
                                        </option>
                                    <%})%>
                                </select>
                                <label for="floatingSelect">Category</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="file" class="form-control" name="image" id=""
                                       placeholder="Choose image">
                                <label for="">image</label>
                            </div>
                        </div>
                        <div class="form-floating mb-3" style="margin-left: 25px">
                            <button type="submit" class="btn btn-primary">Add product</button>
                            <button type="reset" class="btn btn-warning">Clear form</button>
                            <a href="/admin/list/product" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
        <!-- Form End -->


        <!-- Footer Start -->
        <div class="container-fluid pt-4 px-4">
