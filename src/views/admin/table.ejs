    <script>
       function searchUser(){
        let x  = document.getElementById("search-user").value
        console.log(x)
        axios({
            method: "post",
            url: "http://localhost:3000/admin/list",
            headers: {
              "Content-Type": "application/json",
              Authorization: `Bearer ${localStorage.getItem("token")}`,
            },
            data: {
              keywords: x
            },
          }).then((respone)=>{
            let data = respone.data
            let html = ''
            
            console.log(data.length);
            if(data.length > 0){

                for (let i = 0; i < data.length; i++) {
                   html+=`
                   <tr>
                   <td scope="col">${i+1}</td>
                   <td>${data[i].username}</td>
                   <td>${data[i].email}</td>
                   <td>${data[i].role}</td>
                   <td><button onclick="editUser()" class="btn btn-primary"><a style="color: rgb(72, 43, 235); font-size: 20px"><i class="fa-regular fa-pen-to-square"></i></a></button></td>
                    <tr>
                   `
              }
              document.getElementById('a').innerHTML = html
             }
             else{
                let c = "<h2> Không có dữ nào nào !</h2>"
                document.getElementById('a').innerHTML = c
             }
            })
    }
    </script>
