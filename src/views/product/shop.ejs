<script>

    function searchKeyword(){
        let keyword = document.getElementById('keyword').value;

        axios({
            method: "post",
            url: "http://localhost:3000/shop/search",
            headers: {
                "Content-Type": "application/json",
            },
            data: {
                keyword : keyword
            },
        }).then((data)=>{
            let html = ''
            if(data.data.length > 0){
                for(let i =0 ;i<data.data.length; i++){
                    html += `
                   <div class="col-lg-4 col-sm-6">
                            <div class="product-item">
                                <div class="pi-pic">
                                    <img style="width: 300px; height: 300px" src="/${data.data[i].image}" alt="">
                                    <div class="sale pp-sale">Sale</div>
                                    <div class="icon">
                                        <i class="icon_heart_alt"></i>
                                    </div>
                                    <ul>
                                        <li class="w-icon active"><a href="#"><i class="icon_bag_alt"></i></a></li>
                                        <li class="quick-view"><a href="/product/${data.data[i]._id}/product-detail">+ Quick
                                                View</a></li>
                                        <li class="w-icon"><a href="#"><i class="fa fa-random"></i></a></li>
                                    </ul>
                                </div>
                                <div class="pi-text">
                                    <div class="category-name"></div>
                                    <a href="/product/${data.data[i]._id}/product-detail">
                                        <h5>${data.data[i].name}</h5>
                                    </a>
                                    <div class="product-price">
                                        ${data.data[i].price}$
                                    </div>
                                </div>
                            </div>
                        </div>
                `
                }
                document.getElementById('searchProduct').innerHTML = html
            }else {
                let c = "<h2> Không có dữ nào nào !</h2>"
                document.getElementById('searchProduct').innerHTML = c
            }

        })
    }
    $( document ).ready(function() {
        $.ajax({
            url: '/get-cart-items',
            type: 'POST',
            success: function (data) {
                console.log(data);
                $('#numberCart').html(`${data}`)
            },
            error: function(jqXHR, textStatus, errorThrown){
                
            }
        })
    });

</script>
